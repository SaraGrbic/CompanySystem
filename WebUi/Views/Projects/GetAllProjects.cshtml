@model WebUi.Models.ProjectModel

@{
    ViewBag.Title = "GetAllProjects";
}

<h2>GetAllProjects</h2>

<p>
    @Html.ActionLink("Create New", "CreateNewProjectView")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Title")
        </th>
        <th>
            @Html.DisplayName("Price")
        </th>
        <th>
            @Html.DisplayName("Description")
        </th>
        <th>
            @Html.DisplayName("Start date")
        </th>
        <th>
            @Html.DisplayName("End date")
        </th>
        <th>
            @Html.DisplayName("MenagerId")
        </th>
        <th>
            @Html.DisplayName("DepartmentId")
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model.Projects)
{
    <tr style="@("" + (item.Delayed ? "background-color:red" : ""))">
        <td>
            @Html.DisplayFor(modelItem => item.ProjectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectStartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectEndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectManagerId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentId)
        </td>
        <td>
            @Html.ActionLink("Tasks", "GetAllTasks","Task", new { id = item.Id }, null) 
        </td>
 
        <td>
            @Html.ActionLink("Edit", "EditProject", new { id = item.Id }) |     
            @Html.ActionLink("Delete", "DeleteProject", new { id = item.Id },  new { onclick = "return confirm('Are you sure you wish to delete this project?');" })        

        </td>
    </tr>
}

</table>
